{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["chrome"],
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "node"
  },
  "include": ["plugin/**/*"],
  "exclude": ["node_modules"]
}
